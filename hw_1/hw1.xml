<?xml version="1.0" encoding="UTF-8"?>
<project name="hw_1" default="all">
  
  
  <property file="hw1.properties"/>
  <property name="skip.tests" value="true"/>
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.swc"/>
    <include name="*.apk"/>
    <include name="*.zip"/>
    <include name="*.egg"/>
    <include name="*.ane"/>
    <include name="*.jar"/>
    <include name="*.ear"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.8" value="${jdk.home.1.8}/bin"/>
  <path id="jdk.classpath.1.8">
    <fileset dir="${jdk.home.1.8}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/ext/cldrdata.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/jfxrt.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/nashorn.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxswt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
      <include name="lib/ant-javafx.jar"/>
      <include name="lib/dt.jar"/>
      <include name="lib/javafx-mx.jar"/>
      <include name="lib/jconsole.jar"/>
      <include name="lib/packager.jar"/>
      <include name="lib/sa-jdi.jar"/>
      <include name="lib/tools.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.8}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.8}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.8"/>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module hw_1 -->
  
  <dirname property="module.hw_1.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.hw_1" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.hw_1" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.hw_1" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.hw_1" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="hw_1.output.dir" value="${module.hw_1.basedir}/out/production/hw_1"/>
  <property name="hw_1.testoutput.dir" value="${module.hw_1.basedir}/out/test/hw_1"/>
  
  <path id="hw_1.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="hw_1.module.production.classpath">
    <path refid="${module.jdk.classpath.hw_1}"/>
  </path>
  
  <path id="hw_1.runtime.production.module.classpath">
    <pathelement location="${hw_1.output.dir}"/>
  </path>
  
  <path id="hw_1.module.classpath">
    <path refid="${module.jdk.classpath.hw_1}"/>
    <pathelement location="${hw_1.output.dir}"/>
  </path>
  
  <path id="hw_1.runtime.module.classpath">
    <pathelement location="${hw_1.testoutput.dir}"/>
    <pathelement location="${hw_1.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.hw_1">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.hw_1">
    <patternset refid="excluded.from.module.hw_1"/>
  </patternset>
  
  <path id="hw_1.module.sourcepath">
    <dirset dir="${module.hw_1.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.hw_1" depends="compile.module.hw_1.production,compile.module.hw_1.tests" description="Compile module hw_1"/>
  
  <target name="compile.module.hw_1.production" depends="register.custom.compilers" description="Compile module hw_1; production classes">
    <mkdir dir="${hw_1.output.dir}"/>
    <javac2 destdir="${hw_1.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.hw_1}/javac">
      <compilerarg line="${compiler.args.hw_1}"/>
      <bootclasspath refid="hw_1.module.bootclasspath"/>
      <classpath refid="hw_1.module.production.classpath"/>
      <src refid="hw_1.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.hw_1"/>
    </javac2>
    
    <copy todir="${hw_1.output.dir}">
      <fileset dir="${module.hw_1.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.hw_1.tests" depends="register.custom.compilers,compile.module.hw_1.production" description="compile module hw_1; test classes" unless="skip.tests"/>
  
  <target name="clean.module.hw_1" description="cleanup module">
    <delete dir="${hw_1.output.dir}"/>
    <delete dir="${hw_1.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.hw_1" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.hw_1" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.hw_1:jar" value="${basedir}/out/artifacts/hw_1_jar"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.hw_1.jar" value="${artifacts.temp.dir}/hw_1.jar"/>
  </target>
  
  <target name="artifact.hw_1:jar" depends="init.artifacts, compile.module.hw_1" description="Build &#39;hw_1:jar&#39; artifact">
    <property name="artifact.temp.output.hw_1:jar" value="${artifacts.temp.dir}/hw_1_jar"/>
    <mkdir dir="${artifact.temp.output.hw_1:jar}"/>
    <jar destfile="${temp.jar.path.hw_1.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset dir="${hw_1.output.dir}"/>
    </jar>
    <copy file="${temp.jar.path.hw_1.jar}" tofile="${artifact.temp.output.hw_1:jar}/hw_1.jar"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.hw_1:jar" description="Build all artifacts">
    <mkdir dir="${artifact.output.hw_1:jar}"/>
    <copy todir="${artifact.output.hw_1:jar}">
      <fileset dir="${artifact.temp.output.hw_1:jar}"/>
    </copy>
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>